<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="11111"
    android:background="?attr/colorControlHighlight"
    android:backgroundTint="@color/fab_stroke_end_outer_color"
    tools:context="com.example.rishikumar.expensediary.MainActivity">


    <RadioGroup
    android:id="@+id/ll2"
    android:layout_width="0dp"
    android:layout_height="57dp"
    android:orientation="horizontal"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@+id/ll1">

    <RadioButton
        android:id="@+id/rb1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:onClick="onRadioButtonClicked"
        android:text="Food" />

    <RadioButton
        android:id="@+id/rb2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onRadioButtonClicked"
        android:text="Shopping" />

    <RadioButton
        android:id="@+id/rb3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onRadioButtonClicked"
        android:text="Entertainment" />

    <RadioButton
        android:id="@+id/rb4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:onClick="onRadioButtonClicked"
        android:text="Others" />
</RadioGroup>


    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="407dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll4"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:text="Undo"
            android:textSize="14sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="?android:attr/colorFocusedHighlight"
            android:text="Clear"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="@+id/ll4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RadioButton" />

        <TableLayout
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="2dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:stretchColumns="1"
            app:layout_constraintBottom_toTopOf="@+id/tv3"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup">


            <TableRow android:layout_height="45dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:fontFamily="casual"
                    android:text="Food"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/p1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@android:color/background_light"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="--"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:fontFamily="casual"
                    android:text="Shopping"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/p2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@android:color/background_light"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="--"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow android:layout_height="45dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:fontFamily="casual"
                    android:text="Entertainment"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/p3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@android:color/background_light"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="--"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:fontFamily="casual"
                    android:text="Others"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/p4"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@android:color/background_light"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="--"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="412dp"
        android:layout_height="154dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/ll5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3"
        app:layout_constraintVertical_bias="0.92">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.02">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:fontFamily="casual"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:text="BUDGET:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="176dp"
                android:layout_height="78dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.31"
                android:allowUndo="false"
                android:ems="1"
                android:hint="Enter Your Budget"
                android:inputType="number"
                android:paddingRight="0dp"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv44"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="0.03"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="20dp"
            android:ems="50"
            android:fontFamily="casual"
            android:gravity="center"
            android:hint="Balance"
            android:text="Balance"
            android:textAlignment="center"
            android:textSize="45sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/ed2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.34"
            android:ems="10"
            android:gravity="bottom|start"

            android:imeOptions="actionDone"
            android:inputType="number"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.16"
            android:background="?android:attr/colorFocusedHighlight"
            android:text="+ Add"
            android:textSize="30sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
